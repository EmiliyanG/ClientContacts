<Window x:Class="ClientContactViews.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientContactViews"
        mc:Ignorable="d"
        Title="Client Contacts" Height="350" MinWidth="560">
    <Grid>
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

         <local:ContactList DataContext="{Binding ContactList}" Grid.Column="0"/>
        <local:ContactInfoBox DataContext="{Binding ContactInfoBox}" Grid.Column="1" Height="170" VerticalAlignment="Top"/>
    </Grid>
</Window>
